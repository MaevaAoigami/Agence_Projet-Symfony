{% extends "::layout/layout.html.twig" %}

{% block body %}

<div class="container">

    <div class="feather2">
    <div class="row">

    <div class="span9">
        <div id="event_container" class="row">
            <div class="span5">
                {% for event in evenement %}
                <img style="width: 300px;" src="{{ asset(event.image.AssetPath) }}" alt="{{ event.image.name }}">
            </div>

            <div class="span4">
                <h4>{{ event.name }}</h4>
                <p>{{ event.location }}</p>
                <p>{{ event.dateHour|date('Y-m-d H:i:s') }}</p>
            </div>
            {% endfor %}
        </div>
        <br>
        <hr>

    </div>
</div>
</div>
</div>
{% endblock %}
