{% extends "::layout/layout.html.twig" %}

{% block body %}

<div class="container">
    <div class="row">
	<div class="span3">
        {% include '::modulesUsed/navigation.html.twig' %} 
    </div>

        <div class="span9">
            <ul class="thumbnails">

                {% for danseuse in danseuses %}
                    <li class="span3">
                        <div class="thumbnail">
                            <img src="{{ danseuse.photo }}" alt="Balerine" width="300" height="300">
                            <div class="caption">
                                <h4>{{ danseuse.nom }}</h4>

                                <a class="bouton" href="{{ path('presentation', {id: danseuse.id}) }}">Plus d'infos</a>
                                <a class="bouton" href="{{ path ('produits') }}">Ajouter au panier</a>

                            </div>
                        </div>
                {% endfor %}
                
            </ul>

            <div class="pagination">
                <ul>
                    <li class="disabled"><span>Précédent</span></li>
                    <li class="disabled"><span>1</span></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#">Suivant</a></li>
                </ul>
            </div>

        </div>
    </div>
</div>
{% endblock %}
