{% extends "::layout/layout.html.twig" %}
{% block body %}



<div class="container">
    <div class="titre">
<h1>Livraison</h1>
</div>
            
    <div class="row">

        <div class="span12">
            
            <div id="collapseOne" class="accordion-body collapse in">
                <div class="accordion-inner">
                    <div class="span4">
                        <div class="container_livraison_adresse">
                        
                        {% if utilisateur.adresses|length != 0 %}
                        <form action="{{ path('validation') }}" method="POST">
                            
                            <h4>Adresse de livraison</h4>
                            <div class="container_box">
                            {% for adresse in utilisateur.adresses %}
                                <label class="radio">

                                    <input type="radio" name="livraison" value="{{ adresse.id }}" {% if loop.index0 == 0 %}checked="checked"{% endif %}>
                                    {{ adresse.prenom }} {{ adresse.nom }} <br>
                                    {{ adresse.adresse }} <br> {{ adresse.cp }} {{ adresse.ville }} - {{ adresse.pays }} <a href="{{ path('livraisonAdresseSuppression', { 'id' : adresse.id }) }}">
                                    <br><i class="icon-trash"></i></a>
                                    
                                </label>
                            {% endfor %}
                            </div>
                            
                            <br /><br />
                            
                            <h4>Adresse de facturation</h4>
                            <div class="container_box">
                            {% for adresse in utilisateur.adresses %}
                            <label class="radio">
                                <input type="radio" name="facturation" value="{{ adresse.id }}" {% if loop.index0 == 0 %}checked="checked"{% endif %}>
                                    {{ adresse.prenom }} {{ adresse.nom }} <br>
                                    {{ adresse.adresse }} <br> {{ adresse.cp }} {{ adresse.ville }} - {{ adresse.pays }} <a href="{{ path('livraisonAdresseSuppression', { 'id' : adresse.id }) }}">
                                    <br><i class="icon-trash"></i></a>
                            </label>
                            {% endfor %}
                            </div>
                            
                            <br />
                            
                            <button class="bouton">Valider mes adresses</button>
                        </form>
                        {% endif %}
                    
                    </div>
                    </div>

                    
                    <div class="span4 offset2">
                        
                        <h4>Ajouter une nouvelle adresse</h4>
                        <div class="container_box">
                        <div class="container_livraison_new">
                            <form action="{{ path('livraison') }}" method="POST">
                                {{ form_widget(form) }}
                                <button class="bouton" type="submit">Ajouter cette adresse</button>
                            </form>
                        </div>
                        </div>

                    </div>
                    </div>
            </div>

        </div>
    </div>
  {% endblock %}
