{% extends "::layout/layout.html.twig" %}
{% block body %}

        <div class="container">
   
        <div class="titre">
        <h1>Liste des danseuses</h1>
        </div>
        
            <ul>
                <li>
                    <a href="{{ path('pages_danseuses_new') }}" class="bouton">
                        Créer votre profil
                    </a>
                </li>
            </ul>
        </div> 
        <br>   


    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="nom">NOM</th>
                <th class="description">DESCRIPTION</th>
                <th class="prix">PRIX</th>
                <th class="disponibilite">DISPONIBILITÉ</th>
                <th class="categorie">CATEGORIE</th>
                <th class="actions">ACTIONS</th>
            </tr>
        </thead>
        <tbody>

        {% if entities|length == 0 %}
            <tr>
                <td colspan="6">Aucune danseuse dans votre liste.</td>
            </tr>
        {% endif %}

        {% for entity in entities %}
            <tr>
                <td class="nom">{{ entity.nom }}</td>
                <td class="description">{{ entity.description }}</td>
                <td class="prix">{{ entity.prix }} €</td>
                <td class="disponibilite">
                    {% if entity.disponible == 0 %}
                        Non !
                    {% else %}
                        Oui !
                    {% endif %} 
                </td>
                <td class="categorie">{{ entity.categories }}</td>
                <td class="actions">
                <ul>
                    <li>
                    <a href="{{ path('pages_danseuses_show', { 'id': entity.id }) }}" class="bouton">Voir le profil</a>
                    </li>

                    <li>
                    <a href="{{ path('pages_danseuses_edit', { 'id': entity.id }) }}" class="bouton">Modifier</a>
                    </li>

                    <li>
                    <a href="{{ path('danseuse_galerie', { 'danseuse_id' : entity.id }) }}" class="bouton">Galerie</a>
                    </li>
                    
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
   
    {% endblock %}

