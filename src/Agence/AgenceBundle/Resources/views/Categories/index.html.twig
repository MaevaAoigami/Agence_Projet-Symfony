{% extends "::layout/layout.html.twig" %}

{% block body %}
    <div class="container">
    <div class="titre">
    <h1>Liste des catégories</h1>
    </div>
    
    <div class="feather3">
    <div class="admin_categorie_container">
    <div class="admin_categorie">

    <ul>
        <li>
            <a class="bouton" href="{{ path('admin_categories_new') }}">
                Création d'une nouvelle catégorie
            </a>
        </li>
    </ul>
    <br>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                
                <th>NOM</th>
                <th>ACTIONS</th>
            </tr>
        </thead>
        <tbody>

        {% if entities|length == 0 %}
            <tr>
                <td colspan="3">AUCUNE CATÉGORIE DANS CETTE LISTE</td>
            </tr>
        {% endif %}

        {% for entity in entities %}
            <tr>
                
                <td>{{ entity.name }}</td>
                <td>
                <ul>
                <br>
                    <li>
                        <a class="bouton" href="{{ path('admin_categories_show', { 'id': entity.id }) }}">voir le profil</a>
                    </li>
                    <br>
                    <li>
                        <a class="bouton" href="{{ path('admin_categories_edit', { 'id': entity.id }) }}">modifier</a>
                    </li>
                    <br>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        
    </div>
    </div>
    </div>
    </div>

    {% endblock %}
